<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PaddingItemMovie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_image"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_128">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/image_recommendation"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_128"
            app:siRadius="@dimen/dp_8dp" />

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#59FFFFFF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/text_vote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/text_star"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_star"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_image"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/icon_menu"
            android:src="@drawable/ic_more_vert" />

        <TextView
            android:id="@+id/text_recommendations_name"
            style="@style/TextViewItemMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/image_menu"
            android:singleLine="true" />


    </RelativeLayout>
</RelativeLayout>
